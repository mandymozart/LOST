.panel.panel-default.scrollable#ongoingNegotiationsPanel(ng-controller="NegotiationsListCtrl", style="height=250; overflow: auto")
	.panel-heading
		.dropdown.pull-right
			a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
				span.fa.fa-cog
			ul.dropdown-menu(role='menu')
				li
					input(type="checkbox", ng-model="filterDate")
					span Filter by date
		.panel-title
			span.fa.fa-gavel
			span &nbsp; Ongoing negotiations
			.label.label-info(ng-if="storage.profile.negotiations!=0") {{storage.profile.negotiations.length}}
	.panel-body.scrollable
		table.table.table-striped.table-hover.profile-filtered-list(ng-if="storage.profile.negotiations.length!=0")
			tbody.profile-filtered-list--body
				tr(ng-repeat="n in storage.profile.negotiations | filter:dateFilter",ng-animate="'animate'")
					td
						span.profile-info-list.hidden {{n.date}}
					td.profile-info
						span.profile-info-list--item.profile-name {{otherProfile(n).name}}
						span.profile-type.label.label-primary {{otherProfile(n).type}}
					td
						a.profile-action-list--item.btn.btn-success.btn-xs(
									ng-if="storage.selectedNegotiation._id == n._id"
									ng-click="unselectNegotiations()") 
							| selected
						a.profile-action-list--item.btn.btn-default.btn-xs(
									ng-if="storage.selectedNegotiation._id != n._id"
									ng-click="selectNegotiation(n)")
							| select

		.well-lg.text-center(ng-if="storage.profile.negotiations.length==0") No active negotiations!

		
