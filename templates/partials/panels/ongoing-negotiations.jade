.panel.panel-default#ongoingNegotiationsPanel(ng-controller="NegotiationsListCtrl", style="height=250; overflow: auto")
	.panel-heading
		.panel-title Ongoing negotiations ({{storage.profile.negotiations.length}})
			.pull-right
				span.fa.fa-chevron-down
	.panel-body
		table.table.table-striped.table-hover.profile-filtered-list
			thead.profile-filtered-list--head
				tr
					th(colspan='2')
					th.text-right
						.dropdown.pull-right
							a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
								span.fa.fa-angle-down
							ul.dropdown-menu(role='menu')
								li
									a(href='#') by stared&nbsp;
										span.fa.fa-star
								li
									a(href='#') by fee&nbsp;
										span.fa.fa-money

			tbody.profile-filtered-list--body
				tr(ng-repeat="n in storage.profile.negotiations")
					td
						span.profile-info-list {{n.date}}
					td.profile-info
						span.profile-info-list--item.fa.fa-star.text-warning
						span.profile-info-list--item.fa.fa-play
						span.profile-info-list--item.profile-name {{otherProfile(n).name}}
						span.profile-type.label.label-primary {{otherProfile(n).type}}
					td
						a.profile-action-list--item.btn.btn-success.btn-xs(
									ng-if="storage.selectedNegotiation._id == n._id"
									ng-click="unselectNegotiations()") 
							| selected
						a.profile-action-list--item.btn.btn-default.btn-xs(
									ng-if="storage.selectedNegotiation._id != n._id"
									ng-click="selectNegotiation(n)")
							| select
		
