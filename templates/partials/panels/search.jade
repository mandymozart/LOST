.panel.panel-default#searchPanel(ng-controller="ProfileSearchCtrl")

	.panel-heading
		.panel-title Search
			.pull-right
				span.fa.fa-chevron-down

	// Section: Filter
	include ../sections/search-filter.jade

	// Section: Results
	include ../sections/search-results.jade

	.panel-footer.text-right
		button.btn.btn-default(type='submit', ng-click="rememberAll()"): span
			| &nbsp; Remember All
		button.btn.btn-default(type='submit', ng-click="removeAll()"): span
			| &nbsp; Remove All
		button.btn.btn-default(type='submit', ng-click="submitSearch()"): span.fa.fa-search
			| &nbsp; Search
		button.btn.btn-primary(type='submit', ng-click="pushCall()"): span.fa.fa-send-o
			| &nbsp; Push Call