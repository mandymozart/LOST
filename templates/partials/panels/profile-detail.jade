 
.panel.panel-default.with-nav-tabs.filtered-list#profileDetailPanel(ng-if="isProfileSelected()")
	.panel-header
		.panel-heading
			.panel-title Profile {{storage.profile.name}}
				.label-info.pull-right(ng-if="saveStatus !== ''") {{saveStatus}}
	.panel-body
		form
			.row
				.col-sm-4
					.form-group
						label(for="profile-name-area") Name:
							input.form-control(id="profile-name-area",rows="2", cols="50", ng-model="storage.profile.name", placeholder="Unique Name")

				.col-sm-4
					.form-group
						label(for="profile-type-select") Type:
						br
						select(id="profile-type-select", ng-model="storage.profile.type", ng-change="onProfileTypeSelectionChanged()",style="width:100%")
							option(value="{{option}}", ng-repeat="option in storage.datalists.profileTypes", selected="selected", ng-if="option == 'Artist'")
								| {{option}}
							option(value="{{option}}", ng-repeat="option in storage.datalists.profileTypes", ng-if="option != 'Artist'")
								| {{option}}
					.form-group
						label(for="subtype-select") Subtype:
						br
						select(id="subtype-select", ng-model="storage.profile.subtype",style="width:100%")
							option(value="{{option}}", ng-repeat="option in profileSubtypes")
								| {{option}}
				.col-sm-4
					.form-group
						label(for="genre-select") Genres:
						ui-select(id="genre-select",multiple, ng-model="storage.profile.genres", theme="select2", ng-disabled="disabled", style="max_width: 100%; width: 100%;")
							ui-select-match(placeholder="Select genres...") {{$item}}
							ui-select-choices(repeat="genre in storage.datalists.genres | filter:$select.search")
								| {{genre}}
			.row
				.col-sm-4
					.form-group
						label(for="profile-zip") ZIP Code
						input.form-control(id="profile-zip", placeholder="ex. 0711", ng-model="storage.profile.zip")
				.col-sm-8
					.form-group
						label(for="profile-link") Links: <br>
						label(ng-repeat="link in storage.profile.socialLinks") {{link}},  
						input.form-control(id="profile-link",placeholder="ex. http://www.soundcloud.com/awesome_user", ng-model="linkInput")
						button(ng-click="addSocialLink()") Add Link
			.row
				.col-sm-4
					//placeholder for profile picture
				.col-sm-8
					.form-group
						label(for="profile-about-brief-area") About:
						textarea.form-control(id="profile-about-brief-area", rows="2", cols="50", ng-model="storage.profile.about")


	.panel-footer.text-right
		button.btn.btn-primary(ng-click="saveProfile()"): span.fa.fa-save
			| &nbsp; Save profile