.col-sm-3.col-xs-6(ng-if="!isProfileSelected()",ng-repeat="profile in storage.profiles | orderBy:'name'")
	.panel.panel-default(ng-click="loadCalendar($index)")
		.panel-header
			.panel-heading
				h4.panel-title
					span.profile-info-list--item.profile-name {{profile.name}}
					.pull-right
						span.fa.fa-cog(ng-click="loadProfile(profile)", ng-if="profile._id != storage.profile._id")
						//span.fa.fa-cog(ng-click="loadProfile(profile)", ng-if="profile._id == storage.profile._id")
		.panel-body
			p.profile
				.profile-info
					span.profile-type.label.label-primary {{profile.type}}
				.profile-genre-list
					span.profile-genre-list--item.label.label-info(ng-repeat="g in result.genres track by $index") {{g}}
				.profile-ongoing-negotiations
					span.fa.fa-envelope &nbsp; 5 new proposals


