.panel-ground#profileDetail
	//.panel-header
		.panel-heading
			.panel-title Profile
	.panel-body(ng-controller="ProfileDetailReadonlyCtrl")
		form#profileDetailSearchForm
			.row
				.col-sm-12
					.form-group
						.input-group
							input.form-control(ng-model="storage.searchOptions.profileName",type='text',placeholder='Contact artist',name='inputProfile',id='inputProfile')
							.input-group-addon: button.btn.btn-default(type='submit', ng-click="submitDetailSearch()"): span.fa.fa-search
			.row
				.col-sm-4
					img.img-responsive(src='//placehold.it/250x250',alt='Profile Image')
					h5 {{storage.selectedResult.name}}
					.label.label-default {{storage.selectedResult.type}}
					.label.label-primary {{storage.selectedResult.subtype}}
				.col-sm-8
					p.about-brief {{storage.selectedResult.about.brief}}
					p.about-extended.collapsed.in {{storage.selectedResult.about.extended}}
