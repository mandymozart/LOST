extends ../layouts/default

block intro
	.container-fluid
		h1 Calendar

block content
	.container-fluid
		.row#calendar
			.col-sm-6#negotiations
				.panel.panel-info
					.panel-header
						span Specific Date Notes
					.panel-body
						span booked day for selected date goes here
			.col-sm-6#primary-calendar
				.panel.panel-primary(ng-controller='DatepickerDemoCtrl')
					.panel-header
						span Select a date
					.panel-body
						datepicker(ng-model='dt', min-date='minDate', show-weeks='true', custom-class='getDayClass(date, mode)')

			.col-sm-6
				.panel.panel-default.with-nav-tabs#save-gigs
					.panel-header
						ul.nav.nav-tabs
							li.active: a(href="#tab-gigs", data-toggle="tab") Gigs (10)
							li: a(href="#tab-venues", data-toggle="tab") Venues (100)
			.col-sm-6
				.panel.panel-default.with-nav-tabs.filtered-list#filtered-list
					.panel-header
						ul.nav.nav-tabs
							li.active: a(href="#tab-ontour", data-toggle="tab") On Tour (1)
							li: a(href="#tab-resident", data-toggle="tab") Resident (2)
						a.btn.btn-sm.btn-default.fa.fa-sort
					.panel-body
						.tab-content
							.tab-pane.fade.in.active#tab-ontour
								table.table.table-striped.table-hover.profile-filtered-list
									thead.profile-filtered-list--head
										tr
											th(colspan='3') Resident (
												span#ontour-count 1)
									tbody.profile-filtered-list--body
										tr
											td.profile-info
												span.profile-info-list--item.fa.fa-star.text-warning
												span.profile-info-list--item.fa.fa-play
												span.profile-info-list--item.profile-name Budzillus
												span.profile-type.label.label-primary Artist
											td.profile-genre-list
												span.profile-genre-list--item.label.label-info Rock
												span.profile-genre-list--item.label.label-info Polka
											td.profile-action-list
												a.profile-action-list--item.btn.btn-default.btn-xs
													span.fa.fa-comments-o
												a.profile-action-list--item.btn.btn-default.btn-xs
													span.fa.fa-comments-o
							.tab-pane.fade.in#tab-resident
								table.table.table-striped.table-hover.profile-filtered-list
									thead.profile-filtered-list--head
										tr
											th(colspan='3') On Tour (
												span#ontour-count 2)
									tbody.profile-filtered-list--body
										tr
											td.profile-info
												span.profile-info-list--item.fa.fa-star.text-success
												span.profile-info-list--item.fa.fa-play
												span.profile-info-list--item.profile-name Amewu


											td.profile-genre-list
												span.profile-genre-list--item.label.label-info Hip Hop
												span.profile-genre-list--item.label.label-info Bass
												span.profile-genre-list--item.label.label-info Rap

											td.profile-action-list
												span.profile-action-list--item.btn.btn-primary.btn-xs
													span.fa.fa-comments-o
										tr
											td.profile-info
												span.profile-info-list--item.fa.fa-play
												span.profile-info-list--item.profile-name Cindy Sizer


											td.profile-genre-list
												span.profile-genre-list--item.label.label-info Deep House
												span.profile-genre-list--item.label.label-info Down Beat

											td.profile-action-list
												span.profile-action-list--item.btn.btn-primary.btn-xs
													span.fa.fa-comments-o